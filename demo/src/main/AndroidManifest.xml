<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.midtrans.demo">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name=".DemoApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".DemoConfigActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DemoProductPageActivity" />
        <activity android:name=".DemoOrderReviewActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".UserAddressActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".DemoProductListActivity" />
        <activity android:name=".DemoSavedCardsActivity" />
        <activity android:name=".DemoAccountActivity" />
        <activity android:name=".DemoCardRegisterActivity" />

    </application>

</manifest>
