<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.midtrans.sdk.uikit.fragments.SavedCardFragment">

    <LinearLayout
        android:id="@+id/credit_card_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/sixteen_dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.midtrans.sdk.uikit.widgets.DefaultTextView
                android:id="@+id/text_empty_saved_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/no_saved_cards"
                android:textColor="@android:color/white"
                android:textSize="@dimen/header_text_size"
                android:visibility="gone" />

            <android.support.v4.view.ViewPager
                android:id="@+id/saved_card_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <com.midtrans.sdk.uikit.widgets.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sixteen_dp"
            app:fillColor="?colorPrimary"
            app:radius="4dp"
            />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_card"
        android:layout_marginTop="@dimen/four_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_installment_decrease"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:background="@drawable/style_button_dec"
            android:textSize="30sp" />

        <TextView

            android:id="@+id/text_installment_term"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginRight="@dimen/eight_dp"
            android:layout_weight="1"
            android:background="@color/colorSecondary_min"
            android:gravity="center"
            android:text="@string/installment_term"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_installment_increase"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:background="@drawable/style_button_inc"
            android:textSize="30sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/new_card_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sixteen_dp"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_add_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:foregroundGravity="bottom|right"
            android:padding="0dp"
            android:src="@drawable/ic_plus_action"
            app:borderWidth="0dp"
            app:elevation="0dp" />

        <ImageView
            android:id="@+id/image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/btn_add_card"
            android:layout_toStartOf="@id/btn_add_card"
            android:contentDescription="@string/description_arrow"
            android:padding="@dimen/sixteen_dp"
            android:src="@drawable/curve_arrow"
            />

        <com.midtrans.sdk.uikit.widgets.SemiBoldTextView
            android:id="@+id/text_card_number"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/image_arrow"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/add_card_message"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold"
            />

    </RelativeLayout>
</LinearLayout>
