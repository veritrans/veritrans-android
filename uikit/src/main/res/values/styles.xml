<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="VeritransAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> 
        <item name="colorControlHighlight">@color/dark_gray</item> 
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="TransperentTheme" parent="VeritransAppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="Notification">
        <item name="android:paddingTop">@dimen/eight_dp</item>
        <item name="android:paddingBottom">@dimen/eight_dp</item>
        <item name="android:paddingLeft">@dimen/sixteen_dp</item>
        <item name="android:paddingRight">@dimen/sixteen_dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/eight_dp</item>
        <item name="android:background">@color/bg_notification</item>
        <item name="android:textColor">@color/dark_gray_primer</item>
    </style>

    <style name="TokenNotification" parent="Notification">
        <item name="android:drawableLeft">@drawable/ic_token_key</item>
        <item name="android:text">@string/notification_token_message</item>
    </style>

    <style name="OtpNotification" parent="Notification">
        <item name="android:drawableLeft">@drawable/ic_sms</item>
        <item name="android:text">@string/notification_otp_message</item>
    </style>

    <style name="ScrollTheme"></style>
</resources>