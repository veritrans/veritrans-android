<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm_payment">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main_collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <FrameLayout
                    android:id="@+id/main_framelayout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixtyfour_dp"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/eight_dp"
                        android:paddingLeft="@dimen/sixteen_dp"
                        android:paddingRight="@dimen/sixteen_dp">

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <TableRow>

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/appli"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/secondary_text_size" />

                                <id.co.veritrans.sdk.uiflow.widgets.BoldTextView
                                    android:layout_width="@dimen/forty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:text="@string/text_colon"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/primary_text_size"
                                    android:textStyle="bold" />

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="1"
                                    android:text="@string/text_three"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size" />

                            </TableRow>


                            <TableRow android:layout_marginTop="@dimen/eight_dp">

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/input_1"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/secondary_text_size" />

                                <id.co.veritrans.sdk.uiflow.widgets.BoldTextView
                                    android:layout_width="@dimen/forty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:text="@string/text_colon"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/primary_text_size"
                                    android:textStyle="bold" />

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:id="@+id/text_input_1"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="@string/text_input_one_here"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size" />
                            </TableRow>


                            <TableRow android:layout_marginTop="@dimen/eight_dp">

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/input_2"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/secondary_text_size" />

                                <id.co.veritrans.sdk.uiflow.widgets.BoldTextView
                                    android:layout_width="@dimen/forty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:text="@string/text_colon"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/primary_text_size"
                                    android:textStyle="bold" />

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:id="@+id/text_input_2"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="@string/text_input_two_here"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size" />
                            </TableRow>


                            <TableRow android:layout_marginTop="@dimen/eight_dp">

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/input_3"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/secondary_text_size" />

                                <id.co.veritrans.sdk.uiflow.widgets.BoldTextView
                                    android:layout_width="@dimen/forty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="0.3"
                                    android:gravity="center"
                                    android:text="@string/text_colon"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="@dimen/primary_text_size"
                                    android:textStyle="bold" />

                                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                                    android:id="@+id/text_input_3"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@string/text_input_three_here"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </FrameLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:id="@+id/mandiri_clickpay_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_anchor="@id/main_framelayout_title"
            app:title="">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <id.co.veritrans.sdk.uiflow.widgets.DefaultTextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mandiri_click_pay"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tool_bar_title_size" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.CoordinatorLayout>


    <Button
        android:id="@+id/btn_confirm_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="@drawable/blue_button_selector"
        android:text="@string/confirm_payment"
        android:textAllCaps="true"
        android:textColor="@color/white" />

</RelativeLayout>