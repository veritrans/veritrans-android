<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm_payment">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main_collapsing"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <FrameLayout
                    android:id="@+id/main_framelayout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/sixtyfour_dp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/sixteen_dp"
                        android:paddingRight="@dimen/sixteen_dp">


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3">

                            <TableRow>

                                <id.co.veritrans.sdk.widgets.DefaultTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/orderId"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size" />

                                <id.co.veritrans.sdk.widgets.BoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="@string/text_colon"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size"
                                    android:textStyle="bold"/>

                                <id.co.veritrans.sdk.widgets.DefaultTextView
                                    android:id="@+id/text_order_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:gravity="left"
                                    android:text="@string/text_order_id_here"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size"/>

                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/eight_dp">

                                <id.co.veritrans.sdk.widgets.DefaultTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/text_amount"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size"/>

                                <id.co.veritrans.sdk.widgets.BoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="@string/text_colon"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size"
                                    android:textStyle="bold"/>

                                <id.co.veritrans.sdk.widgets.DefaultTextView
                                    android:id="@+id/text_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="1.5"
                                    android:text="@string/text_amount_here"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size" />

                            </TableRow>

                        </TableLayout>
                    </LinearLayout>
                </FrameLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:id="@+id/bank_transfer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_anchor="@id/main_framelayout_title"
            app:title="">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <id.co.veritrans.sdk.widgets.DefaultTextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/virtual_account"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tool_bar_title_size" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.CoordinatorLayout>


    <Button
        android:id="@+id/btn_confirm_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/sixteen_dp"
        android:background="@drawable/blue_button_selector"
        android:text="@string/confirm_payment"
        android:textAllCaps="true"
        android:textColor="@color/white" />


</RelativeLayout>