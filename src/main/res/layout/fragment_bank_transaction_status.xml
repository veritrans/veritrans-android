<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/sixtyfour_dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/sixteen_dp">


        <ImageView
            android:id="@+id/img_transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:src="@drawable/ic_pending"/>


        <id.co.veritrans.sdk.widgets.TextViewFont
            android:id="@+id/text_transaction_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/sixteen_dp"
            android:text="@string/payment_pending"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size"
            app:font="@string/font_open_sans_semibold"/>


        <id.co.veritrans.sdk.widgets.TextViewFont
            android:id="@+id/text_payment_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_error_info"
            android:gravity="center"
            android:text="@string/payment_unsuccessful_msg"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/secondary_text_size"
            android:visibility="gone"
            app:font="@string/font_open_sans_semibold"/>


        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp">


            <TableRow
                android:weightSum="2"
                >

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/amount"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/secondary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/orderId"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/secondary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />

            </TableRow>


            <TableRow
                android:layout_marginBottom="@dimen/eight_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:weightSum="2"
                >

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:id="@+id/text_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Amount Here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/primary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:id="@+id/text_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Order Id here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/primary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />
            </TableRow>


            <TableRow
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:weightSum="2"
                >

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/transactionTime"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/secondary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/paymentType"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/secondary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />

            </TableRow>


            <TableRow
                android:layout_marginTop="@dimen/eight_dp"
                android:weightSum="2"
                >

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:id="@+id/text_transaction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Transaction Time Here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/primary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:id="@+id/text_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Payment Type here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/primary_text_size"
                    app:font="@string/font_open_sans_regular"
                    />
            </TableRow>

        </TableLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>